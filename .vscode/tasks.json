{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Project",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/JTForks.MiscUtil/JTForks.MiscUtil.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Release",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/JTForks.MiscUtil/JTForks.MiscUtil.csproj",
                "-c",
                "Release"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "Pack NuGet",
            "command": "dotnet",
            "type": "process",
            "args": [
                "pack",
                "${workspaceFolder}/JTForks.MiscUtil/JTForks.MiscUtil.csproj",
                "-c",
                "Release",
                "--output",
                "${workspaceFolder}/nupkg"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "Build and Pack",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build Release",
                "Pack NuGet"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}
